<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>Our last cocktails</h1>
    </div>
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
      <% cocktail.cloudinary_public_id ? url_cloudinary = "https://res.cloudinary.com/dhujfzatq/image/upload/".concat(cocktail.cloudinary_public_id).concat(".jpg") : '' %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= url_cloudinary %>');">
          <div class="card-category"><%#= cocktail.doses.count %></div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <p>
              <%= cocktail.doses.count %> <%= cocktail.doses.count > 1 ? 'Ingredients' : 'Ingredient' %>
            </p>
          </div>
          <%= link_to '', cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
